<h1>お気に入り一覧</h1>

<table>
  <thead>
    <tr>
      <th>投稿者</th>
      <th>画像</th>
      <th>投稿内容</th>
    </tr>
  </thead>
  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.picture.user.name %></td>
        <td><%= image_tag favorite.picture.image.url %></td>
        <td><%= favorite.picture.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>
